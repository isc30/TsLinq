{
    "compileOnSave": true,
    "compilerOptions":
    {
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext"],
        "declaration": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "allowUnreachableCode": false,
        "strictFunctionTypes": true,
        "types": ["mocha"]
    },
    "exclude": [
        "node_modules",
        "!node_modules/@types"
    ]
}
